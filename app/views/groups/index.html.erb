<div  class="container-fluid">
<h4>Create Group</h4>
<%= render 'form', group: @group %>

<h4>Groups</h4>
<div class="row">
<div class="col-md-5">
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Creator</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= @currentUser.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>
</div>
