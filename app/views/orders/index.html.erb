<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Restaurant</th>
      <th>Image</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.orderType %></td>
        <td><%= order.restaurant %></td>
        <td><%= order.image %></td>
        <td><%= order.status %></td>
        <td><%= order.user.name %></td>
        <td><%= link_to 'view', user_order_path(current_user, order) %></td>
        <td><%= link_to 'Finish', "/order/#{order.id}", method: :post, data: { confirm: 'Are you sure?' }%></td>
        <td><%= link_to 'cancel',[ current_user, order ], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_user_order_path(current_user) %>
