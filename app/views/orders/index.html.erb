<div  class="container-fluid">
<h4>Orders</h4>
<div class="row">
<div class="col-md-11">
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Type</th>
      <th>Restaurant</th>
      <th>Image</th>
      <th>Status</th>
      <th>User</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.orderType %></td>
        <td><%= order.restaurant %></td>
        <td><%= image_tag order.avatar.url(:thumb) %></td>
        <td><%= order.status %></td>
        <td><%= order.user.name %></td>
        <td style="padding:0px;"><%= link_to 'View', user_order_path(current_user, order),class: "btn btn-link " %> -
          <%= link_to 'Finish', "/order/#{order.id}", method: :post, data: { confirm: 'Are you sure?' },class: "btn btn-link "%> -
           <%= link_to 'Cancel',[ current_user, order ], method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-link " %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<%= link_to 'New Order', new_user_order_path(current_user),class: "btn btn-primary",style:"color:white;" %>
</div>
