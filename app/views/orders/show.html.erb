<div  class="container-fluid">

  <div class="row">
  <div class="col-md-11">
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>Person</th>
        <th>Item</th>
        <th>Amount</th>
        <th>Price</th>
        <th>Comment</th>
      </tr>
    </thead>
    <tbody>

    </tbody>
  </table>
  </div>
  </div>

  <form class="form-inline">
    <div class="form-group">
      <label for="item">Item</label>
      <input type="text" class="form-control" id="item">
    </div>

    <form class="form-inline">
      <div class="form-group">
        <label for="num">Amount</label>
        <input type="number" class="form-control" id="num" min="1" step="1" value ="1" style="width:80px;">
      </div>

      <form class="form-inline">
        <div class="form-group">
          <label for="pr">Price</label>
          <input type="number" class="form-control" id="pr" min="1" step="0.25" value ="1" style="width:80px;">
        </div>

    <div class="form-group">
      <label for="comment">Comment</label>
      <input type="text" class="form-control" id="comment" >
    </div>
    <button type="submit" class="btn btn-default">Add</button>
  </form>
<br>
<%= link_to 'Back', user_orders_path,class: "btn btn-link " %>
</div>
